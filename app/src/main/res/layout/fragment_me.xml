<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true">


    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_3"
        android:background="@drawable/base_horization_line2" >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:minHeight="50dp"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/tv_main_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="头像"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_3"
        android:background="@drawable/base_horization_line2" >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:minHeight="50dp"
        android:padding="10dp" >
        <ImageView
            android:id="@+id/xiangce_picture_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:src="@drawable/xiangce"/>
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="10dip"
            android:text="相册" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:minHeight="50dp"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/shopping_picture_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:src="@drawable/shoppings"/>
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:textSize="15sp"
            android:text="购物" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_3"
        android:background="@drawable/base_horization_line2" >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:minHeight="50dp"
        android:padding="10dp" >
        <ImageView
            android:id="@+id/money_picture_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:src="@drawable/money"/>
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="10dip"
            android:text="支付" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_2"
        android:background="@drawable/base_horizontal_line" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:minHeight="50dp"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/smile_picture_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:src="@drawable/smile"/>
        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:textSize="15sp"
            android:text="表情" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_3"
        android:background="@drawable/base_horization_line2" >
    </View>

       <LinearLayout
           android:id="@+id/ll_setting"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="50dp"
           android:padding="10dp"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/set_picture_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dip"
               android:src="@drawable/set_picture"/>
         <TextView
             style="@style/Smile.TextView._Black"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:textSize="15sp"
             android:layout_marginLeft="10dip"
             android:text="设置"  />
      </LinearLayout>

     <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/base_horization_line2" >
    </View>
</LinearLayout>
