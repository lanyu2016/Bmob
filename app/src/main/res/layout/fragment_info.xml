<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
    <LinearLayout
        android:id="@+id/ll_six_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_left"
            android:layout_width="60dp"
            android:layout_height="0.2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@color/base_color_text_gray" />

        <TextView
            android:id="@+id/tv_info_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/v_left"
            android:text="大学城新闻资讯中心"
            android:textColor="@color/color_bottom_text_press"
            android:textSize="16sp" />

        <View
            android:layout_width="60dp"
            android:layout_height="0.2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_info_center"
            android:background="@color/base_color_text_gray" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_info_center"
        android:background="@color/base_color_text_gray" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_news"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/news" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/guide_color"
                android:text="资讯中心"/>
        </LinearLayout>
        <View
            android:layout_width="0.2dp"
            android:layout_height="80dp"
            android:background="@color/base_color_text_gray"
           />
        <LinearLayout
            android:id="@+id/ll_lecture"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/lecture" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/guide_color"
                android:text="大学城讲座"/>
        </LinearLayout>
        <View
            android:layout_width="0.2dp"
            android:layout_height="80dp"
            android:background="@color/base_color_text_gray"
           />
        <LinearLayout
            android:id="@+id/ll_city_card"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/city_card" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/guide_color"
                android:text="一卡通寻回"/>
        </LinearLayout>
        <View
            android:layout_width="0.2dp"
            android:layout_height="80dp"
            android:background="@color/base_color_text_gray"
           />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_info_center"
        android:background="@color/base_color_text_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_play_game"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/game" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/guide_color"
                android:text="小游戏"/>
        </LinearLayout>
        <View
            android:layout_width="0.2dp"
            android:layout_height="80dp"
            android:background="@color/base_color_text_gray"
            />
        <LinearLayout
            android:id="@+id/ll_deliver"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/delivery" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/guide_color"
                android:text="快递代拿"/>

        </LinearLayout>
        <View
            android:layout_width="0.2dp"
            android:layout_height="80dp"
            android:background="@color/base_color_text_gray"
            />
        <LinearLayout
            android:id="@+id/ll_campaign"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/campaign" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/guide_color"
                android:text="大学城活动"/>
        </LinearLayout>
        <View
            android:layout_width="0.2dp"
            android:layout_height="80dp"
            android:background="@color/base_color_text_gray"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_info_center"
        android:background="@color/base_color_text_gray" />
</LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_info_center"
        android:background="@color/base_color_text_gray" />
    <ListView
        android:id="@+id/lv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
